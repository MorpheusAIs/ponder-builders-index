{
  "name": "morpheusai-ponder-monorepo",
  "version": "1.0.0",
  "description": "Ponder-based blockchain indexers for MorpheusAI smart contracts",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "gateway/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=apps/ponder-builders\" \"npm run dev --workspace=gateway/apollo-federation\"",
    "build": "pnpm build --filter=packages/shared-abis && pnpm build --filter=gateway/apollo-federation",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "setup": "./scripts/setup.sh",
    "db:setup": "docker-compose -f infrastructure/docker-compose.yml up -d",
    "db:down": "docker-compose -f infrastructure/docker-compose.yml down",
    "builders:dev": "npm run dev --workspace=apps/ponder-builders",
    "builders-v4:dev": "npm run dev --workspace=apps/ponder-builders-v4-base-sepolia",
    "capital:dev": "npm run dev --workspace=apps/ponder-capital",
    "subnets:dev": "npm run dev --workspace=apps/ponder-subnets",
    "federation:dev": "npm run dev --workspace=gateway/apollo-federation"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MorpheusAIs/ponder-builders-index"
  },
  "keywords": [
    "blockchain",
    "indexing",
    "ponder",
    "ethereum",
    "morpheusai",
    "graphql",
    "postgres"
  ],
  "author": "MorpheusAI",
  "license": "MIT"
}
