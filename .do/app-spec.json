{
  "name": "ponder-builders-index-monorepo",
  "region": "nyc1",
  "databases": [
    {
      "name": "ponder-db",
      "engine": "PG",
      "version": "15",
      "production": false,
      "size": "db-s-dev-database"
    }
  ],
  "services": [
    {
      "name": "ponder-capital",
      "github": {
        "repo": "MorpheusAIs/ponder-builders-index",
        "branch": "main",
        "deploy_on_push": true
      },
      "dockerfile_path": "apps/ponder-capital/Dockerfile.production",
      "source_dir": ".",
      "instance_count": 1,
      "instance_size_slug": "basic-xxs",
      "http_port": 42069,
      "health_check": {
        "http_path": "/health",
        "initial_delay_seconds": 120,
        "period_seconds": 30,
        "timeout_seconds": 15,
        "success_threshold": 1,
        "failure_threshold": 3
      },
      "envs": [
        {
          "key": "DATABASE_URL",
          "scope": "RUN_TIME",
          "type": "SECRET",
          "value": "${ponder-db.DATABASE_URL}"
        },
        {
          "key": "DATABASE_SCHEMA",
          "value": "ponder_capital_prod"
        },
        {
          "key": "PONDER_RPC_URL_1",
          "scope": "RUN_TIME",
          "type": "SECRET",
          "value": "${PONDER_RPC_URL_1}"
        },
        {
          "key": "PONDER_RPC_URL_42161",
          "scope": "RUN_TIME",
          "type": "SECRET",
          "value": "${PONDER_RPC_URL_42161}"
        },
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "PONDER_LOG_LEVEL",
          "value": "info"
        },
        {
          "key": "PORT",
          "value": "42069"
        }
      ],
      "routes": [
        {
          "path": "/capital"
        }
      ],
      "cors": {
        "allow_origins": [
          {
            "prefix": "*"
          }
        ],
        "allow_methods": ["GET", "POST", "OPTIONS"],
        "allow_headers": ["Content-Type", "Authorization"]
      }
    },
    {
      "name": "ponder-builders",
      "github": {
